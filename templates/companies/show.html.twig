{% extends 'layouts/inside.html.twig' %}

{% block sidebar %}
    {% include 'inc/_nav-company.html.twig' %}
{% endblock %}

{% block content %}

    <h3 class="border-bottom pb-2 mb-3">{{ company.name }}</h3>

    <div class="row">
        <div class="col-md-6">
            <div class="rounded box-shadow my-3 p-3 bg-white">
                <h6 class="border-bottom border-gray pb-2 mb-0 clearfix">
                    Addresses
                    <a href="{{ path('companies.address.create', {'id': company.id}) }}" class="btn btn-success btn-sm btn-light float-right">Add new</a>
                </h6>
                <div class="pt-3">
                    <ul class="nav flex-column">
                        {% for address in addresses %}
                            <li class="nav-item">
                                {{ address.zipCode }} {{ address.city }}, {{ address.streetAddress }}
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>


        <div class="col-md-6">
            <div class="rounded box-shadow my-3 p-3 bg-white">
                <h6 class="border-bottom border-gray pb-2 mb-0">Addresses</h6>
                <div class="pt-3">
                    <ul class="nav">
                        {% for address in addresses %}
                            <li class="nav-item">
                                {{ address.zipCode }} {{ address.city }}, {{ address.streetAddress }}
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>

    </div>

{% endblock %}