{% extends 'layouts/inside.html.twig' %}

{% block sidebar %}
    {% include 'inc/_nav-companies.html.twig' %}
{% endblock %}

{% block content %}

    <div class="row justify-content-md-center">
        <div class="col-md-6">
            <h3 class="border-bottom pb-2 mb-3">Add New Address</h3>

            <div class="rounded box-shadow my-3 p-3 bg-white">
                <h6 class="border-bottom border-gray pb-2 mb-0">{{ company.name }}</h6>

                <div class="mt-3">
                    {{ form_start(addressForm) }}
                    {{ form_widget(addressForm) }}

                    <button class="btn btn-primary" type="submit">Save</button>
                    {{ form_end(addressForm) }}
                </div>
            </div>
        </div>
    </div>


{% endblock %}